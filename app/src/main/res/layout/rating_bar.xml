<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingHorizontal="@dimen/recycler_view_padding_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_rating_bar_people"
        android:theme="@style/labelRatingBarStyle" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/ratingBarTheme" />

    <CheckBox
        android:id="@+id/foodCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.CompoundButton.RadioButton"
        android:text="@string/checkbox_rating_bar_food"
        android:textColor="@color/colorCheckBox"
        android:visibility="gone" />

    <EditText
        android:id="@+id/feedbackEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_any_feedback"
        android:inputType="textMultiLine"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorHint"
        android:visibility="gone" />

</LinearLayout>